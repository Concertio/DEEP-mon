{
  "version": 1,
  "schedule": {
    "type": "streaming"
  },
  "max-failures": 10,
  "workflow": {
    "collect": {
      "config": {
        "hyppo/hyppo-monitor" : {
          "user_id": "fake_user_id"
        }
      },
      "metrics": {
        "/hyppo/hyppo-monitor/*/*/thread/*/cpu": {},
        "/hyppo/hyppo-monitor/*/*/thread/*/cycles": {},
        "/hyppo/hyppo-monitor/*/*/thread/*/instructions": {},
        "/hyppo/hyppo-monitor/*/*/thread/*/pid": {},
        "/hyppo/hyppo-monitor/*/*/thread/*/power": {},
        "/hyppo/hyppo-monitor/*/*/thread/*/time_ns": {},
        "/hyppo/hyppo-monitor/*/*/container/*/ID": {},
        "/hyppo/hyppo-monitor/*/*/container/*/cpu": {},
        "/hyppo/hyppo-monitor/*/*/container/*/cycles": {},
        "/hyppo/hyppo-monitor/*/*/container/*/instructions": {},
        "/hyppo/hyppo-monitor/*/*/container/*/power": {},
        "/hyppo/hyppo-monitor/*/*/container/*/time_ns": {},
        "/hyppo/hyppo-monitor/*/*/package_power": {},
        "/hyppo/hyppo-monitor/*/*/core_power": {},
        "/hyppo/hyppo-monitor/*/*/dram_power": {},
        "/hyppo/hyppo-monitor/*/*/execution_time": {},
        "/hyppo/hyppo-monitor/*/*/switch_count": {},
        "/hyppo/hyppo-monitor/*/*/timeslice": {}
      },
      "publish": [
        {
          "plugin_name": "influxdb",
          "config": {
            "host": "hyppo-collector.necst.it",
            "port": 8086,
            "database": "snap",
            "user": "grafana",
            "password": "grafana",
            "scheme":"http",
            "skip-verify": false,
            "isMultiFields": true
          }
        }
      ]
    }
  }
}
