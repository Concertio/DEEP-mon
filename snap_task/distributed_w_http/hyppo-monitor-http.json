{
  "version": 1,
  "schedule": {
    "type": "streaming"
  },
  "max-failures": 10,
  "workflow": {
    "collect": {
      "metrics": {
        "/hyppo/hyppo-monitor/*/*/ts": {},
        "/hyppo/hyppo-monitor/*/*/thread/*/*/perf_summary": {},
        "/hyppo/hyppo-monitor/*/*/container/*/perf_summary": {},
        "/hyppo/hyppo-monitor/*/*/container/*/net_summary": {},
        "/hyppo/hyppo-monitor/*/*/container/*/net_detail": {},
        "/hyppo/hyppo-monitor/*/*/host/summary": {}
      },
      "publish": [
        {
          "plugin_name": "hyppo-publisher",
          "config": {
            "remote_collector": "ipdps.collector.deepmon.necst.it"
          }
        }
      ]
    }
  }
}
