{
  "version": 1,
  "schedule": {
    "type": "simple",
    "interval": "5s"
  },
  "max-failures": 10,
  "workflow": {
    "collect": {
      "metrics": {
        "/hyppo/hyppo-container-namer/container-name/*/*/*/*/*/container_id": {},
        "/hyppo/hyppo-container-namer/container/*/*/*/*/*/requests": {},
        "/hyppo/hyppo-container-namer/container/*/*/*/*/*/limits": {},
        "/hyppo/hyppo-container-namer/pod-ip/*/*/*/*/ip": {},
        "/hyppo/hyppo-container-namer/service-ip/*/*/*/ip": {},
        "/hyppo/hyppo-container-namer/service-pod/*/*/*/*/pod": {},
        "/hyppo/hyppo-container-namer/node-ip/*/*/ip": {}
      },
      "publish": [
        {
          "plugin_name": "kubernetes-publisher",
          "config": {
            "remote_collector": "collector.deepmon.necst.it"
          }
        }
      ]
    }
  }
}
