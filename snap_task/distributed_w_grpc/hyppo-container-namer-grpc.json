{
  "version": 1,
  "schedule": {
    "type": "simple",
    "interval": "2s"
  },
  "max-failures": 10,
  "workflow": {
    "collect": {
      "config": {
        "hyppo/hyppo-monitor": {
          "customer_id": "not_registered"
        }
      },
      "metrics": {
        "/hyppo/hyppo-container-namer/container-name/*/*/*/*/*/container_id": {}
      },
      "publish": [
        {
          "plugin_name": "container-namer-grpc-publisher",
          "config": {
            "remote_collector": "collector.hyppo.necst.it:37000"
          }
        }
      ]
    }
  }
}
